{
	"name": "spiking",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"dev": "npm run build:css && concurrently \"npx tsc --watch\" \"npx tailwindcss -i ./src/styles.css -o ./public/output.css --watch\" \"nodemon --exec node --no-warnings --loader ts-node/esm src/index.ts\"",
		"dev:css": "npx tailwindcss -i ./src/styles.css -o ./dist/output.css --watch",
		"build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/output.css --minify",
		"build": "npx tsc && npm run build:css",
		"start": "node dist/index.js",
		"start:prod": "npm run build && node dist/index.js",
		"ccxt": "node --no-warnings --loader ts-node/esm src/ccxt.ts",
		"vercel-build": "npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"nodemon": "^3.1.9",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.16",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"ccxt": "^4.4.40",
		"cors": "^2.8.5",
		"express": "^4.21.2"
	}
}
